FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.remote.txt .
RUN pip install --no-cache-dir -r requirements.remote.txt

# Copy server code
COPY enactai_server_remote.py .

# Expose port
EXPOSE 8082

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD python -c "import httpx; exit(0 if httpx.get('http://localhost:8082/health').status_code == 200 else 1)"

# Run server
CMD ["python", "enactai_server_remote.py"]