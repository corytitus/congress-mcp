{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.remote"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python enactai_server_remote.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 3
  },
  "envVars": {
    "CONGRESS_GOV_API_KEY": {
      "description": "API key for congress.gov",
      "required": true
    },
    "GOVINFO_API_KEY": {
      "description": "API key for govinfo.gov",
      "required": true
    },
    "ENACTAI_API_TOKEN": {
      "description": "Bearer token for API authentication",
      "required": false
    },
    "PORT": {
      "description": "Port to run the server on",
      "default": "8080"
    }
  }
}